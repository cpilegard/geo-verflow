<h1>Question: </h1>
<h3><%= @question.title %></h3>
<p><%= @question.content %></p>

<h1>Responses: </h1>
<ul>
  <% @answers.each do |answer| %>
    <li><%= link_to "vote up", {url: '#'}, {class: "vote_up"} %></li>
    <li><%= link_to "vote down", {url: '#'}, {class: "vote_down"} %></li>
    <li><%= answer.content %></li>
  <% end %>
</ul>

<h4>Submit an answer: </h4>
<%= form_for [@question, @answer] do |f| %>
  <%= f.text_area :content %>
  <br>
  <%= f.submit "Submit Answer" %>
<% end %>
