<h1>Question: </h1>
<h3><%= @question.title %></h3>
<p><%= @question.content %></p>

<h1>Responses: </h1>
<ul>
  <% @answers.each do |answer| %>
    <li>
      <%= answer.content %>
      <ul>
        <li><strong>Votes: <%= answer.votes %></strong></li>
        <li><%= link_to "vote up", {url: '#', remote: true}, {class: "vote_up"} %></li>
        <li><%= link_to "vote down", {url: '#', remote: true}, {class: "vote_down"} %></li>
      
      </ul>
    </li>
  <% end %>
</ul>

<h4>Submit an answer: </h4>
<%= form_for [@question, @answer] do |f| %>
  <%= f.text_area :content %>
  <br>
  <%= f.submit "Submit Answer" %>
<% end %>
